
{
  "compilerOptions": {
    "rootDirs": ["src", "custom-types.d.ts"],
    "outDir": "dist",
    "lib": ["es2020", "esnext"],
    "target": "es2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    
     
    
    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}